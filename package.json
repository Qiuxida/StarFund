{
	"name": "star-fund",
	"displayName": "StarFund",
	"description": "查看基金的插件",
	"version": "0.0.2",
	"publisher": "qiuxd",
	"engines": {
		"vscode": "^1.47.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "starFund.add",
				"title": "添加基金",
				"icon": {
					"light": "/image/light/add.svg",
					"dark": "/image/dark/add.svg"
				}
			},
			{
				"command": "starFund.refresh",
				"title": "刷新",
				"icon": {
					"light": "/image/light/refresh.svg",
					"dark": "/image/dark/refresh.svg"
				}
			},
			{
				"command": "starFund.open",
				"title": "打开基金详情"
			},
			{
				"command": "starFund.delete",
				"title": "删除基金"
			},
			{
				"command": "starFund.addShare",
				"title": "添加份额"
			},
			{
				"command": "starStock.add",
				"title": "添加",
				"icon": {
					"light": "/image/light/add.svg",
					"dark": "/image/dark/add.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "fund",
					"title": "基金",
					"icon": "/image/fund.svg"
				}
			]
		},
		"views": {
			"fund": [
				{
					"id": "my-fund",
					"title": "我的基金",
					"name": "我的基金"
				},
				{
					"id": "my-stock",
					"title": "我的股票",
					"name": "我的股票"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "starFund.add",
					"group": "navigation",
					"when": "view == my-fund"
				},
				{
					"command": "starFund.refresh",
					"group": "navigation",
					"when": "view == my-fund"
				},
				{
					"command": "starStock.add",
					"group": "navigation",
					"when": "view == my-stock"
				}
			],
			"view/item/context": [
				{
					"command": "starFund.addShare",
					"group": "navigation",
					"when": "view == my-fund"
				},
				{
					"command": "starFund.delete",
					"group": "navigation",
					"when": "view == my-fund"
				}
			]
		},
		"configuration": {
			"properties": {
				"starFund": {
					"type": "array",
					"default": [
						{
							"code": "320007",
							"share": 0
						}
					]
				},
				"starStock": {
					"type": "array",
					"default": [
						{
							"code": "sh000001",
							"share": 0
						}
					]
				},
				"total": {
					"type": "number",
					"default": 0
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "0.19.2",
		"echarts": "^4.8.0"
	}
}
